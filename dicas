$categorias = array(1 => 'Apartamento', 2 => 'Casa', 3 => 'Ilha');

<select>
foreach($categorias as $key => $value) {
	<option value="$key">$value</option>
}
</select>

<table>
	<tr>
		<th>ID</th>
		<th>Descrição</th>
		<th></th>
	</tr>
	foreach($categorias as $key => $value) {
		<tr>
			<td><?php echo $key; ?></td>
			<td>$value</td>
			<td><a href="categoria.php?id=$key">Editar</a></td>
		</tr>
	}
</table>

